<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.introduction.IntroductionFragment">
    <RelativeLayout
        android:id="@+id/playBtn"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/video_introimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/video_image2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/play" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_wintec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="1dp"
                android:gravity="left"
                android:padding="4dp"
                android:text="Wintec, According to wikipidea:"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="399dp" />

            <TextView
                android:id="@+id/textView_wintec_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"
                android:gravity="left"
                android:padding="4dp"
                android:text="The Waikato Institute of Technology, also known as Wintec, is an institute of technology based in New Zealand's Waikato region."
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="1dp"
                android:gravity="left"
                android:padding="4dp"
                android:text="Location"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView_location_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"
                android:gravity="left"
                android:padding="4dp"
                android:text="City campus — Anglesea Street 37°47′20″S 175°16′46″E \nRotokauri (formerly Avalon) campus — Akoranga Road 37°45′41″S 175°13′50″E\nHorticulture Education Centre at Hamilton Gardens — Cobham Drive 37°48′17″S 175°18′14″E"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView_faculties"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="1dp"
                android:gravity="left"
                android:padding="4dp"
                android:text="Faculties"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView_faculties_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"
                android:gravity="left"
                android:padding="4dp"
                android:text="Centre for Beauty Therapy, Hairdressing and Hospitality\nCentre for Business and Enterprise\nCentre for Information Technology\nCentre for Engineering and Industrial Design\nCentre for Health and Social Practice\nCentre for Languages\nSchool of Media Arts\nCentre for Applied Science and Primary Industries\nCentre for Sport Science and Human Performance\nCentre for Trades\nCentre for Research and Applied Innovation\nCentre for Education and Foundation Pathways\nDesign Factory NZ"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="1dp"
                android:gravity="left"
                android:padding="4dp"
                android:text="Contact"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView_contact_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"
                android:gravity="left"
                android:padding="4dp"
                android:text="Website:http://www.wintec.ac.nz\nMobile:0800 294 6832\nEmail:info@wintec.ac.nz"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="wikipedia,(n.d),Waikato Institute of Technology,https://en.wikipedia.org/wiki/Waikato_Institute_of_Technology"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>